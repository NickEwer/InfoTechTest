<%= simple_form_for(@photo, html: {class: 'form-horizontal' }) do |f| %>
	<% if @photo.errors.any? %>
		<div id="error_explanation">
		<h2><%= pluralize(@photo.errors.count, "error") %> prohibited this photo from being saved:</h2>
	
		<ul>
		<% @photo.errors.full_messages.each do |message| %>
		<li><%= message %></li>
	<% end %>
	</ul>
	</div>
	<% end %>
	
	<!-- Input Form -->
	<div class="row">
		
		<div class="col-sm-3"></div>
		<div class="col-sm-6 input-form">
	
			<h3>WEAPON DETAILS</h3>
            <%= f.input :img, input_html: {class: 'hidden'}, :label => false, :placeholder => "Caption" %>
            <%= f.input :thumb, input_html: {class: 'hidden'}, :label => false, :placeholder => "Caption" %>
			<%= f.input :caption, input_html: {class: 'form-control'}, :label => false, :placeholder => "Caption" %>
			<%= f.input :desc, input_html: {class: 'form-control'}, :label => false, :placeholder => "Description" %>
			<%= f.input :alt, input_html: {class: 'form-control'}, :label => false, :placeholder => "Alt" %>
            <%= f.input :avatar, as: :file, input_html: {class: 'form-control'}, :label => false, :placeholder => "Image" %>
			
			<div class="actions">
				<%= f.button :submit, :class => "btn btn-success btn-large float-right" %>
			</div>
		</div>
		
		<div class="col-sm-3"></div>
		
	</div>
  
<% end %>

